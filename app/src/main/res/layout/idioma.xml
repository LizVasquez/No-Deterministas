<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_humo"
    android:orientation="vertical"
    tools:context=".Activities.Idioma">


    <TextView
        android:id="@+id/text_view_idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/knewave"
        android:text="@string/elige_tu_idioma"
        android:textColor="#E4D236"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_idioma"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_español"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_menu"
            android:fontFamily="@font/knewave"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="@string/español"
            android:textColor="#E4D236" />


        <Button
            android:id="@+id/button_ingles"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_menu"
            android:fontFamily="@font/knewave"
            android:gravity="center"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="@string/ingles"
            android:textColor="#E4D236"
            android:onClick="onClick"/>

    </LinearLayout>


</RelativeLayout>
